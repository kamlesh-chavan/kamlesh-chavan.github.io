@model List<SmartMakaan.DAL.EntityFramework.city>

<h2>City</h2>

<div class="" ng-controller="cityController">
    <div class="page-title">
        <div class="title_left">
            <h3>
                Invoice
                <small>
                    Some examples to get you started 
                </small>
            </h3>
        </div>

    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Table List<small>City</small></h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <table id="example" class="table table-striped responsive-utilities jambo_table"></table>

                </div>
            </div>
        </div>
    </div>

    <!------------------------------------------------------------End Table List------------------------------------------------------->
    <!------------------------------------------------------------Start Details------------------------------------------------------->


    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_content">
                    <br />
                    @using (Ajax.BeginForm("SaveCity", "City", new AjaxOptions { HttpMethod = "POST" }, new {@class = "form-horizontal form-label-left" }))
                    {
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                                City Name <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                @*@Html.TextBoxFor(x => x.cityName, new { @class = "form-control col-md-7 col-xs-12" })
                                @Html.ValidationMessageFor(x => x.cityName);*@
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                                About City <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <img id="user_img" height="100" width="90" style="border:solid" />
                                @*@Html.TextBoxFor(x => x.cityDescription, new { @class = "form-control col-md-7 col-xs-12" })*@
                                <input type="file" title="search image" id="file" name="file" onchange="show(this)" class="form-control col-md-7 col-xs-12" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                                City Description <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                @*@Html.TextBoxFor(x => x.cityDescription, new { @class = "form-control col-md-7 col-xs-12" })*@
                            </div>
                        </div>
                        <div class="ln_solid"></div>
                        <div class="form-group">
                            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                <button type="submit" class="btn btn-primary">Cancel</button>
                                <button type="submit" class="btn btn-success">Submit</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>


    <!------------------------------------------------------------End Details------------------------------------------------------->

</div>

@*<script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>*@

<script>

    var dataSet = [
    ["1", "Tiger Nixon", "System Architect", "Edinburgh"],
    ["2", "Garrett Winters", "Accountant", "Tokyo"],
    ["3", "Tiger Nixon", "System Architect", "Edinburgh"],
    ["4", "Garrett Winters", "Accountant", "Tokyo"],
    ["5", "Tiger Nixon", "System Architect", "Edinburgh"],
    ["6", "Garrett Winters", "Accountant", "Tokyo"],
    ["7", "Tiger Nixon", "System Architect", "Edinburgh"],
    ["8", "Garrett Winters", "Accountant", "Tokyo"],
    ["9", "Tiger Nixon", "System Architect", "Edinburgh"],
    ["10", "Garrett Winters", "Accountant", "Tokyo"],
    ["11", "Garrett Winters", "Accountant", "Tokyo"],
    ["12", "Garrett Winters", "Accountant", "Tokyo"]
    ]
    $(document).ready(function () {
        $('#example').DataTable({
            data: dataSet,
            "sorting": false,
            columns: [
                 {
                     'render': function (data, type, full, meta) {
                         return '<input type="checkbox" name="id[]" value="'
                            + $('<div/>').text(data).html() + '">';
                     }
                 },
                { title: "City Name" },
                { title: "Position" },
                { title: "Office" },
                {
                    title: "Action",
                    "mRender": function (data, type, full) {
                        return '<a class="btn btn-info btn-sm" href=#/' + full[0] + '>' + 'Edit' + '</a><a class="btn btn-danger btn-sm" href=#/' + full[0] + '>' + 'Delete' + '</a>';
                    }
                }
            ]

        });
    });

    function show(input) {
        if (input.files && input.files[0]) {
            var filerdr = new FileReader();
            filerdr.onload = function (e) {
                $('#user_img').attr('src', e.target.result);
            }
            filerdr.readAsDataURL(input.files[0]);
        }
    }
</script>

