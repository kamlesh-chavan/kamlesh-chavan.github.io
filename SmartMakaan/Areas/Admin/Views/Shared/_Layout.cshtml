    <title>SmartMakaan Admin</title>
    <!-- Bootstrap core CSS -->
    <link href="~/Areas/Admin/Css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Areas/Admin/Fonts/Css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Areas/Admin/Css/animate.min.css" rel="stylesheet">

    <link href="~/Areas/Admin/Css/datatables.css" rel="stylesheet" />
    <!-- Custom styling plus plugins -->
    <link href="~/Areas/Admin/Css/custom.css" rel="stylesheet">
    <script src="~/Areas/Admin/Scripts/angular.js"></script>
    <script src="~/Areas/Admin/Scripts/jquery.min.js"></script>    
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
   
</head>
<body class="nav-md">
    <div class="container body">

        <div class="main_container">
            <div class="col-md-3 left_col">
                <div class="left_col scroll-view">
                    <div class="navbar nav_title" style="border: 0;">
                        <a href="@Url.Action("Index", "Dashboard",new { area = "Admin" })" class="site_title"><i class="fa fa-paw"></i> <span>SmartMakaan </span></a>
                        
                    </div>
                    <div class="clearfix"></div>                    
                    @*<br />*@
                    <!-- sidebar menu -->
                    <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
                        <div class="menu_section">                            
                            <ul class="nav side-menu">
                                <li>
                                    <a href="@Url.Action("Index", "Dashboard")"><i class="fa fa-laptop"></i>Dashboard</a>
                                </li>
                                <li>
                                    <a><i class="fa fa-home"></i> Masters Data <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu" style="display: none">                                        
                                        
                                        <li>
                                            <a href="@Url.Action("Index", "City",new { area = "Admin" })">City</a>
                                        </li>
                                        <li>
                                            <a href="@Url.Action("Index", "Location",new { area = "Admin" })">Location</a>
                                        </li>
                                        <li>
                                            <a href="@Url.Action("Index", "Developer",new { area = "Admin" })">Developer</a>
                                        </li>
                                        <li>
                                            <a href="@Url.Action("Index", "User",new { area = "Admin" })">User</a>
                                        </li>
                                    </ul>
                                </li>
                                <li>
                                    <a><i class="fa fa-edit"></i> Project (Create/Edit) <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu" style="display: none">
                                        <li>
                                            <a href="@Url.Action("Index", "ProjectList",new { area = "Admin" })">Project List</a>
                                        </li>
                                        <li>
                                            <a href="@Url.Action("Index", "NewProject",new { area = "Admin" })">Add New Project</a>
                                        </li>
                                    </ul>
                                </li>
                                <li>
                                    <a><i class="fa fa-desktop"></i> Customer <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu" style="display: none">
                                        <li>
                                            <a href="@Url.Action("Index", "User",new { area = "Admin" })">Customer List</a>
                                        </li>                                        
                                    </ul>
                                </li>
                               
                            </ul>
                        </div>                        
                    </div>
                    <!-- /sidebar menu -->
                    
                </div>
            </div>
            <!-- top navigation -->
            <div class="top_nav">
                <div class="nav_menu">
                    <nav class="" role="navigation">
                        <div class="nav toggle">
                            <a id="menu_toggle"><i class="fa fa-bars"></i></a>
                        </div>                       
                        @if (Request.IsAuthenticated)
                        {
                            using (Html.BeginForm("LogOff", "Login", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                            {
                                @Html.AntiForgeryToken()

                                <ul class="nav navbar-nav navbar-right">
                                    <li class="">
                                        <a href="javascript:;" class="user-profile dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                            @User.Identity.GetUserName()
                                            <span class="fa fa-angle-down"></span>
                                        </a>
                                        <ul class="dropdown-menu dropdown-usermenu animated fadeInDown pull-right">
                                            <li>
                                                @Html.ActionLink("Profile", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })                                                
                                            </li>
                                            <li>
                                                <a href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-sign-out pull-right"></i> Log Out</a>
                                            </li>
                                        </ul>
                                    </li>
                                </ul>
                            }
                        }
                    </nav>
                </div>
            </div>
            <!-- /top navigation -->
            <!-- page content -->
            <div class="right_col" role="main">

                <div class="container body-content" >
                    {{2+2}}
                    @RenderBody()
                    <hr />

                </div>


            </div>
            <!-- footer content -->
            <footer>
                <div class="">
                    <p class="pull-right">
                        SmartMakaan <a>me</a>. |
                        <span class="lead"> <i class="fa fa-paw"></i> SmartMakaan</span>
                    </p>
                </div>
                <div class="clearfix"></div>
            </footer>
            <!-- /footer content -->
        </div>
        <!-- /page content -->
    </div>
        
    <script src="~/Areas/Admin/Scripts/bootstrap.min.js"></script> 
    
    <script src="~/Areas/Admin/Scripts/datatables.js"></script>
    <script src="~/Areas/Admin/Scripts/jquery.dataTables.js"></script>
        
    <!-- richtext editor -->
    <script src="~/Areas/Admin/Scripts/bootstrap-wysiwyg.js"></script>
    <script src="~/Areas/Admin/Scripts/jquery.hotkeys.js"></script>
    <script src="~/Areas/Admin/Scripts/prettify.js"></script>

    <!-- Auto resize textarea-->
    <script src="~/Areas/Admin/Scripts/autosize.min.js"></script>

    
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    
    <script src="~/Areas/Admin/Scripts/custom.js"></script>
    
